<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:view="clr-namespace:ControlLED.Classes" x:DataType="view:LedPwmViewModel"
             x:Class="ControlLED.View.SliderLedPwm">
  <ContentView.Content>
      <StackLayout>
            <Slider Value="{Binding ChangePwm}" Minimum="0" Maximum="100" BackgroundColor="WhiteSmoke" 
                    Scale="2" Margin="10"/>
      </StackLayout>
  </ContentView.Content>
</ContentView>